# Homebrew php
alias bphp="/opt/homebrew/bin/php"
alias §="/opt/homebrew/bin/php"

# Artisan commands
alias bphpas="bphp artisan serve"

# Composer homebrew
alias bcomposer="/opt/homebrew/bin/composer"
alias bphpcomposerupdate="bphp -d memory_limit=-1 /opt/homebrew/bin/composer update"

# Vendor Behat
alias behat="vendor/behat/behat/bin/behat"
alias bphpbehat="bphp vendor/behat/behat/bin/behat"

# Alias for starting selenium with chrome driver
alias startselenium="java -jar selenium-server-standalone-2.43.1.jar -Dwebdriver.chrome.driver=\"/usr/local/bin/chromedriver\"" 

# Alias for PHPSpec path to executable
alias phpspec="vendor/phpspec/phpspec/bin/phpspec"

# Alias for home directory
alias home="cd $HOME"

# Alias for Laravel PHPunit
alias phpunit="vendor/bin/phpunit"

